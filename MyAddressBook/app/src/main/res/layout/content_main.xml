<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            tools:listitem="@layout/layout_person_info"
    />

    <TextView
            android:id="@+id/empty_people_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_no_person"
            android:fontFamily="sans-serif-light"
            android:text="@string/msg_no_persons"
            android:textColor="@color/msg_no_person"
            android:textSize="@dimen/msg_no_person" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>